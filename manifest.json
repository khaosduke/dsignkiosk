{

  "manifest_version": 2,
  "name": "Digital Sign Tab Manager",
  "version": "0.9",

  "description": "Ensures only one tab is open when using a web page as a digital sign.",

  "icons": {
    "48": "icons/lock.svg"
  },

  "browser_action": {
    "default_icon": {
      "42": "icons/lock.svg"
    },
    "default_title": "Digital Sign Options",
    "default_popup": "popup/status.html"
  },

  "permissions": [
    "tabs",
    "sessions",
    "storage"
  ],

  "options_ui": {
  "page": "options/options.html"
  },

  "background": {
    "scripts":["tabman.js"]
  },

  "applications": {
    "gecko": {
      "id": "@dsignkiosk"
    }
  }

}
